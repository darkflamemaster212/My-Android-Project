            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="phút"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
    ////////////////////////////////////////////////////////

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewX2PreBusMin"
                android:layout_weight="1"
                android:text="Chuyến xe"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textViewNextBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewPreBus"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_weight="1"
                android:text="sẽ chạy sau"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewNextBusMin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="0.03"
                android:background="#ffffff"
                android:text="00"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewPreBusMin"
